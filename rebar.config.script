%% -*- erlang -*-
%% Config script file for uart-application
case os:getenv("REBAR_DEPS_DIR") of
    NoDir when NoDir == false; % env var not defined
	       NoDir == [] ->  % env var set to empty string
	os:putenv("DEPS_DIR", proplists:get_value(deps_dir, CONFIG, "deps")),
	CONFIG; 
    Dir ->
	os:putenv("DEPS_DIR", Dir),
	lists:keystore(deps_dir, 1, CONFIG, {deps_dir, Dir})
end.
